<div class="container">
    <div class="text-center my-3">
        <h1>게시판 입니다.</h1>
        </div>
        <div class="text-right my-3">
        <a class="btn btn-primary" role="button" href="/posts/new">글 작성</a>
        </div>
       <table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">제목</th>
      <th scope="col">내용</th>
      <th scope="col">작성일자</th>
      <th scope="col">보기</th>
    </tr>
  </thead>
  <tbody>
      <% @posts.reverse.each do |p| %>
    <tr>
      <th scope="row"><%= p.id%></th>
      <!--row는 가로로 읽고, 반대는 새로로 읽음-->
      <td><%= p.title%></td>
      <td><%= p.body%></td>
      <td><%= p.created_at%></td>
      <td><a href="posts/<%=p.id%>">링크</a></td>
    </tr>
    <% end%>
  </tbody>
</table>
    </body>
    </div>
</html>